<h3> Orders </h3>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Order Cost</th>
      <th>Your Cost</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to l(order.created_at, format: :short), order_path(id: order.id) %></td>
        <td><%= order.cost %></td>
        <td><%= current_user_cost(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h3>
	<%= @team.name %> - <%= @team.balance %> â‚¬
</h3>
<p> 
	<%= link_to "Edit", edit_team_path(@team) %> |
	<%= link_to 'Destroy', team_path(@team),
              method: :delete,
              data: { confirm: 'Are you sure?' } %> 
</p>

<h3> Orders </h3>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Order Cost</th>
      <th>Your Cost</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to l(order.created_at, format: :short), team_order_path(@team, order) %></td>
        <td><%= order.cost %></td>
        <td><%= current_user_cost(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pull-right clearfix">
  <%= link_to "New Order", new_team_order_path(@team), class: "btn btn-default" %>
</div>

